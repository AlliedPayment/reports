{
  "name": "root",
  "private": true,
  "devDependencies": {
    "cz-lerna-changelog": "^2.0.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0"
  },
  "scripts": {
    "commit": "npx git-cz"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
