{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "cz-lerna-changelog": "^2.0.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0"
  },
  "scripts": {
    "commit": "npx git-cz",
    "wizard": "npx lerna-wizard",
    "devSetup": "npm i lerna-wizard -g"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "",
      "junk": "#exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
